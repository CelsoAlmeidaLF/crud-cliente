@model ClienteModel

<section class="container-fluid">
    <div class="row">
        <div class="col-6 mx-auto mt-4">
            <h2 class="text-center">Cadastrar Novo Cliente</h2>
            <hr />
        </div>
    </div>
    <div class="row">
        <div class="col-md-4 py-4 px-3 mx-auto">
            <form href="/Clientes" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row my-2">
                    <div class="col">
                        <input asp-for="Nome" class="form-control" placeholder="Nome" aria-label="Nome" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                    <div class="col">
                        <input asp-for="SobreNome" class="form-control" placeholder="Sobrenome" aria-label="Sobrenome" />
                        <span asp-validation-for="SobreNome" class="text-danger"></span>
                    </div>
                </div>
                <div class="row my-2">
                    <div class="col">
                        <input asp-for="CPF" class="form-control" placeholder="CPF" aria-label="CPF" />
                        <span asp-validation-for="CPF" class="text-danger"></span>
                    </div>
                </div>
                <div class="row my-2">
                    <div class="col">
                        <input asp-for="Email" class="form-control" placeholder="Email" aria-label="Email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="row my-2" my-2>
                    <div class="col">
                            <input asp-for="Telefone1" class="form-control" placeholder="Telefone 1" aria-label="Telefone 1" />
                            <span asp-validation-for="Telefone1" class="text-danger"></span>
                    </div>
                    <div class="col">

                        <div class="form-group">
                            <input asp-for="Telefone2" class="form-control" placeholder="Telefone 2" aria-label="Telefone 2" />
                            <span asp-validation-for="Telefone2" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row my-2">
                    <div class="col">
                        <input asp-for="CEP" class="form-control" placeholder="CEP" aria-label="CEP"  />
                        <span asp-validation-for="CEP" class="text-danger"></span>
                    </div>
                </div>
                <div class="row my-2">
                    <div class="col">
                        <input asp-for="Endereco" class="form-control"  placeholder="Endereço" aria-label="Endereço"  />
                        <span asp-validation-for="Endereco" class="text-danger"></span>
                    </div>
                    <div class="col-3">

                        <input asp-for="Num" class="form-control"  placeholder="Num" aria-label="Num"  />
                        <span asp-validation-for="Num" class="text-danger"></span>
                    </div>
                </div>
                <div class="row my-2">
                    <div class="col">
                        <input asp-for="Complemento" class="form-control" placeholder="Complemento" aria-label="Complemento" />
                        <span asp-validation-for="Complemento" class="text-danger"></span>
                    </div>
                    <div class="col">

                        <input asp-for="Bairro" class="form-control" placeholder="bairro" aria-label="Bairro" />
                        <span asp-validation-for="Bairro" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <input type="submit" value="Salvar" class="btn btn-primary my-3" />
                </div>
            </form>
        </div>
    </div>
</section>

<footer class="fixed-bottom border-top bg-dark">
    <p class="p-3 text-center text-light">&copy; Celso Almeida Leite Filho - @DateTime.Now.Year</p>
</footer>